syntax on

set nu
set autoread
set ruler

set smartcase
set ignorecase
set magic

set incsearch
set hlsearch
set expandtab
set smarttab
set showmatch
set lazyredraw

set tabstop=4
set softtabstop=4
set shiftwidth=4

set autoindent
set smartindent

set history=500
set noswapfile
set wildmenu
set wildmode=longest,list,full
hi Comment ctermfg=green

set splitbelow splitright
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
